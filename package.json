{
  "name": "react-microdux",
  "version": "1.0.0",
  "description": "A small library to help create mini local reducer-like states for components to hopefully delay the need for redux in a react project.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "jest",
    "coverage": "jest --coverage",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kalvinpearce/react-microdux.git"
  },
  "keywords": [
    "React",
    "MicroDux",
    "Redux"
  ],
  "author": "Kalvin Pearce",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/kalvinpearce/react-microdux/issues"
  },
  "homepage": "https://github.com/kalvinpearce/react-microdux#readme",
  "devDependencies": {
    "@types/enzyme": "^3.10.3",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/jest": "^24.0.21",
    "@types/react": "^16.9.11",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "jest": "^24.9.0",
    "prettier": "^1.18.2",
    "react-dom": "^16.11.0",
    "ts-jest": "^24.1.0",
    "tslint": "^5.20.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.6.4",
    "react": "^16.11.0"
  },
  "files": [
    "lib/**/*"
  ],
  "jest": {
    "transform": {
      "^.+\\.(t|j)sx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "collectCoverageFrom": [
      "src/**/*"
    ]
  }
}
